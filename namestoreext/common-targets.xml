<project name="EPP SDK-NameStoreExt Common Targets" default="test" basedir=".">

  <!-- =================================================================== -->
  <!-- Run All Tests 				 	                                   -->
  <!-- =================================================================== -->
  <target 	name="test" depends="test-codec, test-client-server"
  			description="Run EPP SDK-NameStoreExt Unit Tests.  Requires JDK 1.4" >

 </target>
 
  <!-- =================================================================== -->
  <!-- Codec Unit Test					 	                               -->
  <!-- =================================================================== -->
  <target	 name="test-codec" depends="jar" unless="namestoreext.test.codec.disable"
  			description="Run CODEC Unit Test" >

	<junit printsummary="yes" haltonfailure="yes" showoutput="yes">
		<formatter type="plain" usefile="true" />
		<classpath refid="namestoreext.test.classpath" />
		<test name="com.verisign.epp.codec.namestoreext.EPPNamestoreExtTst"
			fork="yes" todir="${namestoreext.results.dir}"
		/>
	</junit>

  </target>


  <!-- =================================================================== -->
  <!-- Run full client/server test                                         -->
  <!-- =================================================================== -->
  <target	 name="test-client-server" depends="jar" unless="namestoreext.test.client-server.disable"
  			description="Run full client server test.  Requires JDK 1.4" >

	<parallel> 
		<daemons>
			<java classname="com.verisign.epp.serverstub.Server" fork="true">
				<arg value="epp.config"/>
				<classpath refid="namestoreext.test.classpath" />
			</java> 
		</daemons>
		<sequential>
			<sleep seconds="2"/>
			<junit printsummary="yes" haltonfailure="yes" showoutput="yes">
				<formatter type="plain" usefile="true" />
				<classpath refid="namestoreext.test.classpath" />
				<test name="com.verisign.epp.interfaces.EPPNamestoreExtDomainTst"
					fork="yes" todir="${namestoreext.results.dir}"/>
				<test name="com.verisign.epp.interfaces.EPPNamestoreExtHostTst"
					fork="yes" todir="${namestoreext.results.dir}"/>
			</junit>
		</sequential>
	</parallel>
  </target>

  <!-- =================================================================== -->
  <!-- Run full client/server test                                         -->
  <!-- =================================================================== -->
  <target	 name="test-client" depends="jar" unless="namestoreext.test.client.disable"
  			description="Run client test against an already running server" >

		<junit printsummary="yes" haltonfailure="yes" showoutput="yes">
			<formatter type="plain" usefile="true" />
			<classpath refid="namestoreext.test.classpath" />
				<test name="com.verisign.epp.interfaces.EPPNamestoreExtDomainTst"
					fork="yes" todir="${namestoreext.results.dir}"/>
				<test name="com.verisign.epp.interfaces.EPPNamestoreExtHostTst"
					fork="yes" todir="${namestoreext.results.dir}"/>
		</junit>
  </target>

  <!-- =================================================================== -->
  <!-- Start the server stub                                               -->
  <!-- =================================================================== -->
  <target	 name="start-server" depends="jar"
  			description="Start the server stub" >

		<java classname="com.verisign.epp.serverstub.Server" fork="true">
			<arg value="epp.config"/>
			<classpath refid="namestoreext.test.classpath" />
		</java> 
  </target>

</project>